{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug tcp_server",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/tcp_server",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "miDebuggerPath": "/usr/bin/gdb"
      }
    ]
  }
  
